issn = {00220477},
journal = {Journal of Ecology},
keywords = {Community-weighted traits,Effect trait,Intraspecific variation,Leaf economics spectrum,Litter decomposition,Plant-soil (below-ground) interactions,Response trait,Soil fertility gradients,Temperate rain forest,Trait plasticity},
number = {6},
pages = {1409--1419},
title = {{The within-species leaf economic spectrum does not predict leaf litter decomposability at either the within-species or whole community levels}},
