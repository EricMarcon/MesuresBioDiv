file = {:C$\backslash$:/Users/Eric.Marcon/OneDrive/Documents/Mendeley/Ricotta - 2002 - Bridging the gap between ecological diversity indices and measures of biodiversity with Shannon's entropy comment to Iz.pdf:pdf},
journal = {Ecological Modelling},
