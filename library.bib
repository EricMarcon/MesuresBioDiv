doi = {10.1111/j.1469-185X.2011.00187.x},
file = {:C$\backslash$:/Users/Eric.Marcon/OneDrive/Documents/Mendeley/G{\"{o}}tzenberger et al. - 2012 - Ecological assembly rules in plant communities - approaches, patterns and prospects.pdf:pdf},
journal = {Biological Reviews},
number = {1},
pages = {111--127},
title = {{Ecological assembly rules in plant communities - approaches, patterns and prospects}},
