file = {:C$\backslash$:/Users/Eric.Marcon/OneDrive/Documents/Mendeley/Poorter, Bongers, Bongers - 2006 - Architecture of 54 moist-forest tree species Traits, trade-offs, and functional groups.pdf:pdf},
journal = {Ecology},
number = {5},
pages = {1289--1301},
title = {{Architecture of 54 moist-forest tree species: Traits, trade-offs, and functional groups}},
url = {http://onlinelibrary.wiley.com/doi/10.1890/0012-9658(2006)87[1289:AOMTST]2.0.CO;2/abstract},
