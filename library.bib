year = {2011}
}
@article{Chase2011,
abstract = {$\beta$-diversity represents the compositional variation among communities from site-to-site, linking local ($\alpha$-diversity) and regional ($\gamma$-diversity). Researchers often desire to compare values of $\beta$-diversity across localities or experimental treatments, and to use this comparison to infer possible mechanisms of community assembly. However, the majority of metrics used to estimate $\beta$-diversity, including most dissimilarity metrics (e.g., Jaccard's and S{\o}renson's dissimilarity index), can vary simply because of changes in the other two diversity components ($\alpha$ or $\gamma$-diversity). Here, we overview the utility of taking a null model approach that allows one to discern whether variation in the measured dissimilarity among communities results more from changes in the underlying structure by which communities vary, or instead simply due to difference in $\alpha$-diversity among localities or experimental treatments. We illustrate one particular approach, originally developed by Raup and Crick (1979) in the paleontological litera...},
