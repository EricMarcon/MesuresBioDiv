doi = {10.1111/1365-2745.12153},
file = {:C$\backslash$:/Users/Eric.Marcon/OneDrive/Documents/Mendeley/Arroyo-Rodr{\'{i}}guez et al. - 2013 - Plant $\beta$-diversity in fragmented rain forests testing floristic homogenization and differentiation hypot.pdf:pdf},
journal = {Journal of Ecology},
