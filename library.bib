journal = {Journal of Vegetation Science},
keywords = {1963-1970,1969-1984,abbreviations,argentina,assembly rule,cabrera,cli-,climatic gradient,correa,leaf weight ratio,lwr,mate change,nomenclature,plant functional type,sla,specific,trait-environment linkage},
number = {1},
