file = {:C$\backslash$:/Users/Eric.Marcon/OneDrive/Documents/Mendeley/Perry et al. - 2002 - Illustrations and Guidelines for Selecting Statistical Methods for Quantifying Spatial Pattern in Ecological Data.pdf:pdf},
journal = {Ecography},
