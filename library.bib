journal = {Ecology},
number = {6},
pages = {2180--2192},
title = {{A New Method for Detecting Species Associations with Spatially Autocorrelated Data}},
url = {http://onlinelibrary.wiley.com/doi/10.1890/0012-9658(1998)079[2180:ANMFDS]2.0.CO;2/full},
