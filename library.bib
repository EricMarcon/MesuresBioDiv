doi = {10.1016/j.foreco.2015.08.002},
file = {:C$\backslash$:/Users/Eric.Marcon/OneDrive/Documents/Mendeley/Osazuwa-Peters, Chapman, Zanne - 2015 - Selective logging does the imprint remain on tree structure and composition after 45 years.pdf:pdf},
