doi = {10.1111/j.1365-2435.2007.01339.x},
file = {:C$\backslash$:/Users/Eric.Marcon/OneDrive/Documents/Mendeley/Lavorel et al. - 2008 - Assessing functional diversity in the field - Methodology matters!.pdf:pdf},
journal = {Functional Ecology},
pages = {134--147},
title = {{Assessing functional diversity in the field - Methodology matters!}},
