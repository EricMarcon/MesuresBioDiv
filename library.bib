journal = {Ecology Letters},
keywords = {Assembly rules,Bark thickness,Environmental filtering,Hierarchical Bayesian model,Limiting similarity,Maximum entropy,Specific leaf area,Trait convergence,Trait divergence,Wood density},
month = {nov},
number = {11},
pages = {1291--1299},
pmid = {22906233},
title = {{A predictive model of community assembly that incorporates intraspecific trait variation}},
url = {http://doi.wiley.com/10.1111/j.1461-0248.2012.01852.x},
