journal = {Ecology},
number = {4},
pages = {1011--1025},
title = {{Spatial Pattern and Process in Plant-Pathogen Interactions}},
url = {http://onlinelibrary.wiley.com/doi/10.2307/2265572/full},
volume = {77},
year = {1996}
}
