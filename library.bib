author = {Lortie, Christopher J. and Aarssen, Lonnie W.},
file = {:C$\backslash$:/Users/Eric.Marcon/OneDrive/Documents/Mendeley/Lortie, Aarssen - 1996 - The Specialization Hypothesis for Phenotypic Plasticity in Plants.pdf:pdf},
