journal = {Ecology},
number = {6},
pages = {1465--1471},
title = {{A trait-based test for habitat filtering: Convex hull volume}},
url = {http://onlinelibrary.wiley.com/doi/10.1890/0012-9658(2006)87[1465:ATTFHF]2.0.CO;2/abstract},
volume = {87},
year = {2006}
}
