doi = {10.1111/j.0030-1299.2004.13253.x},
file = {:C$\backslash$:/Users/Eric.Marcon/OneDrive/Documents/Mendeley/Giller et al. - 2004 - Biodiversity effects on ecosystem functioning emerging issues and their experimental test in aquatic environments.pdf:pdf},
