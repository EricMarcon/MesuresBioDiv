file = {:C$\backslash$:/Users/Eric.Marcon/OneDrive/Documents/Mendeley/Arbia et al. - 2014 - Spatio-temporal clustering in the pharmaceutical and medical device manufacturing industry A geographical micro-le.pdf:pdf},
journal = {Regional Science and Urban Economics},
pages = {298--304},
title = {{Spatio-temporal clustering in the pharmaceutical and medical device manufacturing industry: A geographical micro-level analysis}},
url = {http://linkinghub.elsevier.com/retrieve/pii/S0166046214001045},
volume = {49},
year = {2014}
