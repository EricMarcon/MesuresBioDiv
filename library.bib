doi = {10.1111/j.1365-2745.2011.01873.x},
file = {:C$\backslash$:/Users/Eric.Marcon/OneDrive/Documents/Mendeley/R{\'{e}}jou-M{\'{e}}chain et al. - 2011 - Spatial aggregation of tropical trees at multiple spatial scales (suppl mater).doc:doc;:C$\backslash$:/Users/Eric.Marcon/OneDrive/Documents/Mendeley/R{\'{e}}jou-M{\'{e}}chain et al. - 2011 - Spatial aggregation of tropical trees at multiple spatial scales.pdf:pdf},
