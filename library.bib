journal = {Ecology},
number = {4},
pages = {913--919},
title = {{Treefall Gaps and the Maintenance of Species Diversity in a Tropical Forest}},
url = {http://onlinelibrary.wiley.com/doi/10.1890/0012-9658{\%}282001{\%}29082[0913:TGATMO]2.0.CO{\%}3B2/abstract},
