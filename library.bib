journal = {Global Ecology and Biogeography},
number = {1},
pages = {1--5},
title = {{The tangled link between $\beta$- and $\gamma$-diversity: a Narcissus effect weakens statistical inferences in null model analyses of diversity patterns}},
volume = {26},
year = {2017}
}
