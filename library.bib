title = {{Spatial structure and the survival of an inferior competitor: a theoretical model of neighbourhood competition in plants}},
url = {http://www.sciencedirect.com/science/article/pii/S0304380002000583},
volume = {158},
year = {2002}
}
@article{Feret2014,
