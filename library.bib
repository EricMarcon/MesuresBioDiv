file = {:C$\backslash$:/Users/Eric.Marcon/OneDrive/Documents/Mendeley/Arnan, Cerd{\'{a}}, Retana - 2015 - Partitioning the impact of environment and spatial structure on alpha and beta components of taxonomic, fu.pdf:pdf},
