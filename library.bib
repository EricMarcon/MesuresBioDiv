journal = {PloS one},
number = {7},
pages = {e100014},
title = {{Distance-based functional diversity measures and their decomposition: a framework based on hill numbers}},
url = {http://www.plosone.org/article/info{\%}253Adoi{\%}252F10.1371{\%}252Fjournal.pone.0100014},
