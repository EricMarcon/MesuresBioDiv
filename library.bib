file = {:C$\backslash$:/Users/Eric.Marcon/OneDrive/Documents/Mendeley/Lavorel, Garnier - 2002 - Predicting changes in community composition and ecosystem functioning from plant traits revisiting the Holy Gr.pdf:pdf},
journal = {Functional Ecology},
number = {5},
pages = {545--556},
title = {{Predicting changes in community composition and ecosystem functioning from plant traits: revisiting the Holy Grail}},
