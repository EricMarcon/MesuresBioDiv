journal = {Journal of Ecology},
keywords = {Competition importance and intensity,Environmental gradients,Plant-plant interactions,Stress gradient hypothesis,Tree radial growth},
number = {1},
pages = {300--312},
title = {{Effects of competition on tree radial-growth vary in importance but not in intensity along climatic gradients}},
