number = {21},
pages = {4039--4060},
title = {{Coverage-adjusted entropy estimation}},
url = {http://www.scopus.com/inward/record.url?eid=2-s2.0-34548391942{\&}partnerID=40{\&}md5=046bf2951c790a7541c691f647c337cf},
