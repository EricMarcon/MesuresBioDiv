file = {:C$\backslash$:/Users/Eric.Marcon/OneDrive/Documents/Mendeley/Guisande et al. - 2017 - DER An algorithm for comparing species diversity between assemblages.pdf:pdf},
issn = {1470160X},
journal = {Ecological Indicators},
pages = {41--46},
title = {{DER: An algorithm for comparing species diversity between assemblages}},
url = {http://www.sciencedirect.com/science/article/pii/S1470160X17303047},
