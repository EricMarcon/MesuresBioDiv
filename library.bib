journal = {Ecological Modelling},
number = {1-2},
pages = {299--313},
title = {{Investigating beta diversity by Kullback-Leibler information measures}},
url = {http://www.sciencedirect.com/science/article/B6VBS-4GP1VRK-1/2/6546ebdfe79445ef3684e0bf8dec9d14},
