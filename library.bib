file = {:C$\backslash$:/Users/Eric.Marcon/OneDrive/Documents/Mendeley/Couteron, Kokou - 1997 - Woody vegetation spatial patterns in a semi-arid savana of Burkina Faso, West Africa.pdf:pdf},
